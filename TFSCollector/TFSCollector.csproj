<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <PackAsTool>true</PackAsTool>
    <Authors>Kelvys B. Pantaleão</Authors>
    <PackageLicenseFile>COPYING.txt</PackageLicenseFile>
    <Description>Tool for collecting workitens data from a TFS server.</Description>
    <Copyright>Kelvys B. 2019</Copyright>
    <PackageTags>TFS Data Collector Workitens</PackageTags>
    <PackageProjectUrl>https://github.com/Kelvysb/TFSCollector</PackageProjectUrl>    
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="2.2.4" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="2.2.4" />
    <PackageReference Include="Microsoft.TeamFoundationServer.Client" Version="16.152.0-preview" />
  </ItemGroup>

  <ItemGroup>
    <None Include="COPYING.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
